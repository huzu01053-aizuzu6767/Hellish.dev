        .glass { background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.05); }
        .section-padding { padding: 80px 0; }
        .reveal { opacity: 0; transform: translateY(20px); transition: all 0.6s ease-out; }
        .reveal.active { opacity: 1; transform: translateY(0); }
        .nav-link { font-family: 'Unbounded', sans-serif; font-size: 0.65rem; font-weight: 700; opacity: 0.6; transition: 0.3s; text-decoration: none !important; color: white !important; }
        .nav-link:hover { opacity: 1; color: var(--primary) !important; }
        ::-webkit-scrollbar { width: 3px; }
        ::-webkit-scrollbar-thumb { background: var(--primary); }
    </style>
</head>
