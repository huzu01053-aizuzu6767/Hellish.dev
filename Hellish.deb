        h1, h2, h3, .font-heading { font-family: 'Unbounded', sans-serif; text-transform: uppercase; letter-spacing: -0.01em; }
        .hero-title { font-size: clamp(2.2rem, 7vw, 4.5rem); line-height: 0.9; }
        .text-gradient { background: linear-gradient(135deg, #fff 0%, var(--primary) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
        .grid-bg { background-image: radial-gradient(circle at 1px 1px, rgba(255, 31, 68, 0.07) 1px, transparent 0); background-size: 30px 30px; position: fixed; inset: 0; z-index: -1; }
        .btn-main { font-family: 'Unbounded', sans-serif; font-weight: 700; padding: 0.8rem 1.8rem; background: var(--primary); color: #000; transition: all 0.3s ease; display: inline-flex; align-items: center; justify-content: center; gap: 8px; font-size: 0.75rem; text-decoration: none !important; border: none; cursor: pointer; }
